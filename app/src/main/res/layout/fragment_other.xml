<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.demo.app.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:orientation="vertical">


        <me.reezy.cosmo.tv.marquee.MarqueeTextView
            android:id="@+id/marquee"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@android:color/black"
            android:text="MarqueeTextView 一二三四五六七八九十"
            android:textColor="@color/purple_200"
            android:textSize="16dp" />


        <me.reezy.cosmo.tv.SuperTextView
            android:id="@+id/counting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#8226b7"
            android:fontFamily="@font/wiguru2"
            android:gravity="center_vertical"
            android:text="123456"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:tvGradiantEndColor="#fec08f"
            app:tvGradiantStartColor="#fce4c1"
            app:tvIcon="@mipmap/ic_apple"
            app:tvIconGravity="textStart"
            app:tvIconSize="32dp"
            app:tvIconTint="@color/teal_700"
            app:tvLetterSpacing="0.8dp"
            app:tvStrokeColor="#222222"
            app:tvStrokeWidth="1.5dp" />

        <View
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/black" />

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <me.reezy.cosmo.tv.SuperTextView
                android:id="@+id/btn_decrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#8226b7"
                android:fontFamily="@font/din_black_italic"
                android:gravity="center_vertical"
                android:text="Decrease"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:tvGradiantEndColor="#fec08f"
                app:tvGradiantStartColor="#fce4c1"
                app:tvLetterSpacing="0.8dp"
                app:tvStrokeColor="#222222"
                app:tvStrokeWidth="1.5dp" />

            <me.reezy.cosmo.tv.SuperTextView
                android:id="@+id/btn_increase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:background="#8226b7"
                android:fontFamily="@font/din_black_italic"
                android:gravity="center_vertical"
                android:text="Increase"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:tvGradiantEndColor="#fec08f"
                app:tvGradiantStartColor="#fce4c1"
                app:tvLetterSpacing="0.8dp"
                app:tvStrokeColor="#222222"
                app:tvStrokeWidth="1.5dp" />
        </FrameLayout>


        <TextView
            android:id="@+id/toggle"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@color/teal_200"
            android:text="toggle"/>

        <me.reezy.cosmo.tv.readmore.ReadMoreTextView
            android:id="@+id/txt_readmore"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/teal_200"
            android:maxLines="2"
            android:text="ReadMoreTextView\n01234567890123456789012345678901234567890123456789012345678901234567890"
            android:textSize="14sp"
            app:tvLessIcon="@drawable/md_expand_less"
            app:tvMoreIcon="@drawable/md_expand_more"
            app:tvMoreTextColor="@color/purple_200"  />

        <me.reezy.cosmo.tv.readmore.ReadMoreTextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/teal_200"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="ReadMoreTextView\n0123456789\n01234567\n01234567" />

        <me.reezy.cosmo.tv.readmore.ReadMoreTextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/teal_200"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="ReadMoreTextView012345678901234567"
            app:tvLessText="收起"
            app:tvLessTextColor="@color/purple_200"
            app:tvMoreText="展开"
            app:tvMoreTextColor="@color/purple_200" />

    </LinearLayout>

</FrameLayout>