<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context="com.demo.app.MainActivity">

        <me.reezy.cosmo.tv.SuperTextView
            android:id="@+id/super_text"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:fontFamily="@font/din_black_italic"
            android:text="12345678"
            android:textColor="@color/purple_200"
            android:textSize="16dp"
            app:tvIcon="@color/teal_200"
            app:tvIconSize="20dp"
            app:tvIconGravity="top"
            app:tvSubtext="subtext"
            app:tvSubtextColor="@android:color/holo_red_light"
            app:tvSubtextGravity="top"
            app:tvSubtextSize="12dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="文本位置(gravity)" />

            <Spinner
                android:id="@+id/sp_text_gravity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/textGravity"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="图标位置(iconGravity)" />

            <Spinner
                android:id="@+id/sp_icon_gravity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/iconGravity"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="次要文本位置(subtextGravity)" />

            <Spinner
                android:id="@+id/sp_subtext_gravity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/iconGravity"
                android:spinnerMode="dialog" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#8226b7"
            android:baselineAligned="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_black_italic"
                android:text="￥"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/din_black_italic"
                android:text="999"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <me.reezy.cosmo.tv.SuperTextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/din_black_italic"
                android:gravity="center_vertical"
                android:text="999"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:tvSubtext="￥"
                app:tvSubtextFont="@font/din_black_italic"
                app:tvSubtextGravity="textStart"
                app:tvSubtextSize="18sp" />

            <me.reezy.cosmo.tv.SuperTextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/din_black_italic"
                android:gravity="top"
                android:text="999"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:tvGradiantEndColor="@color/teal_700"
                app:tvGradiantStartColor="@color/teal_200"
                app:tvSubtext="￥"
                app:tvSubtextFont="@font/din_black_italic"
                app:tvSubtextGravity="textEnd"
                app:tvSubtextSize="18sp" />

            <me.reezy.cosmo.tv.SuperTextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/din_black_italic"
                android:gravity="bottom|center_horizontal"
                android:text="999"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:tvSubtext="￥"
                app:tvSubtextFont="@font/din_black_italic"
                app:tvSubtextGravity="textStart"
                app:tvSubtextSize="18sp" />
        </LinearLayout>


        <FrameLayout
