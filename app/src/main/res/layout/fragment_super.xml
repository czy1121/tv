                android:text="ABC"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:tvIcon="@mipmap/ic_launcher"
                app:tvIconGravity="textStart"
                app:tvIconPadding="5dp"
                app:tvIconSize="20dp"
                app:tvIconTint="@color/teal_200"
