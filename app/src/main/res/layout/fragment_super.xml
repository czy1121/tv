            android:textSize="16dp"
            app:tvIcon="@mipmap/ic_launcher"
            app:tvIconGravity="textTop"
            app:tvIconPadding="5dp"
            app:tvIconSize="32dp"
            app:tvIconTint="@color/teal_200"
            app:tvSubtext="哈哈"
            app:tvSubtextColor="@android:color/holo_red_light"
            app:tvSubtextGravity="bottom"
            app:tvSubtextPadding="0dp"
            app:tvSubtextSize="12dp" />

        <me.reezy.cosmo.tv.SuperTextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:fontFamily="@font/din_black_italic"
            android:gravity="start|center_vertical"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="123.45"
            android:textColor="@color/purple_200"
            android:textSize="20dp"
            app:tvIcon="@mipmap/ic_launcher"
            app:tvIconGravity="textStart"
            app:tvIconPadding="5dp"
            app:tvIconSize="24dp"
            app:tvIconTint="@color/teal_200"
            app:tvSubtext="哈哈"
            app:tvSubtextColor="@android:color/holo_red_light"
