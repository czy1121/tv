                app:tvIconPadding="5dp"
                app:tvIconSize="20dp"
                app:tvIconTint="@color/teal_200"
                app:tvStrokeColor="#222222"
                app:tvStrokeWidth="2dp"
                app:tvSubtext="哈哈"
                app:tvSubtextColor="@android:color/holo_red_light"
                app:tvSubtextGravity="textBottom"
                app:tvSubtextPadding="0dp"
                app:tvSubtextSize="12dp" />

            <me.reezy.cosmo.tv.SuperTextView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_gravity="end"
                android:layout_marginBottom="10dp"
                android:background="#8226b7"
