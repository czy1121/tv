            app:tvSubtextSize="10dp" />

        <me.reezy.cosmo.tv.SuperTextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray"
            android:fontFamily="@font/din_black_italic"
            android:gravity="start|top"
            android:padding="10dp"
            android:text="123.456"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:tvIcon="@mipmap/ic_apple"
            app:tvIconGravity="start"
            app:tvIconPadding="5dp"
            app:tvIconSize="32dp"
            app:tvIconTint="@color/purple_200"
            app:tvSubtext="一二三四五六七八九十\n1234567890"
            app:tvSubtextColor="@android:color/white"
            app:tvSubtextFont="@font/din_black_italic"
            app:tvSubtextGravity="bottom"
            app:tvSubtextPadding="0dp"
            app:tvSubtextSize="10dp"
            app:tvSubtextStrokeColor="@color/black"
