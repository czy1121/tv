            app:tvIconTint="@color/teal_200"
            app:tvSubtext="一二三四五六七八九十"
            app:tvSubtextColor="@android:color/holo_red_light"
            app:tvSubtextGravity="bottom"
            app:tvSubtextPadding="0dp"
            app:tvSubtextSize="14dp" />

        <me.reezy.cosmo.tv.SuperTextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:fontFamily="@font/din_black_italic"
            android:gravity="left|center_vertical"
            android:padding="10dp"
            android:text="123.456"
            android:textColor="@color/purple_200"
            android:textSize="20dp"
            app:tvIcon="@mipmap/ic_launcher"
